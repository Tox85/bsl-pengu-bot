# Wallet / RPC
PRIVATE_KEY=0x...            # wallet Base & Abstract (mode single-wallet)
BASE_RPC_URL=https://mainnet.base.org             # ex: https://base-mainnet.g.alchemy.com/v2/...
ABSTRACT_RPC_URL=https://api.mainnet.abs.xyz      # RPC officiel Abstract

# Multi-wallet configuration
MNEMONIC=                    # phrase mnémonique pour générer les wallets (optionnel)
WALLET_COUNT=100             # nombre de wallets à générer depuis le mnémonique
HUB_WALLET_PRIVATE_KEY=0x... # clé privée du wallet Hub (qui reçoit les fonds de Bybit)

# Bybit configuration
BYBIT_API_KEY=               # clé API Bybit
BYBIT_API_SECRET=            # secret API Bybit
BYBIT_SANDBOX=false          # utiliser le sandbox Bybit (pour les tests)
BYBIT_TESTNET=false          # utiliser le testnet Bybit

# Distribution configuration
DISTRIBUTION_USDC_PER_WALLET=10.0    # montant USDC par wallet
DISTRIBUTION_ETH_PER_WALLET=0.005    # montant ETH par wallet (pour le gas)
DISTRIBUTION_RANDOMIZE_AMOUNTS=true  # randomiser les montants de distribution
DISTRIBUTION_VARIATION_PERCENT=10    # pourcentage de variation des montants (10%)
HUB_WITHDRAW_AMOUNT=0.00002          # montant minimal à retirer du hub (ETH)
SATELLITE_VARIANCE_MIN=0.85          # borne inférieure de randomisation
SATELLITE_VARIANCE_MAX=1.15          # borne supérieure de randomisation

# Chains
FROM_CHAIN_ID=8453           # Base
TO_CHAIN_ID=2741             # Abstract

# Li.Fi / Jumper
LIFI_BASE_URL=https://li.quest/v1
LIFI_API_KEY=                # optionnel (meilleures rate limits)

# Tokens (Abstract) -> à vérifier côté utilisateur
PENGU_ADDRESS_ABS=0x...      # à VERIFIER sur abscan/pandora UI (ne pas hardcoder)
WETH_ADDRESS_ABS=0x...       # WETH sur Abstract (à renseigner)
USDC_ADDRESS_ABS=0x...       # USDC sur Abstract (à renseigner)

# Policy
SWAP_SLIPPAGE_BPS=80         # 0.8%
LP_RANGE_PCT=5               # ±5% default
LP_MINUTES_BEFORE_COLLECT=10
MIN_BRIDGE_USD=1             # Montant minimum bridge (USD)
MIN_SWAP_USD=5               # Montant minimum swap (USD)
MIN_ABS_GAS_BUFFER_ETH=0.002 # Buffer gas Abstract (ETH)
FEE_GAS_MULTIPLE_TRIGGER=3   # Collecter seulement si valeur >= 3x coût gas
FEE_REINVEST_PERCENT=30      # Part des frais réinvestie dans la position LP
PENGU_TO_ETH_FEE_SWAP_PERCENT=100  # Part des Pengu cash-out convertie en ETH
LIQUIDITY_UTILIZATION_PERCENT=80   # Part du capital déployée dans la LP

# Auto gas top-up sur Abstract
