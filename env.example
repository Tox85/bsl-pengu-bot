# Exchange configuration
BYBIT_API_KEY=
BYBIT_API_SECRET=
HUB_WITHDRAW_AMOUNT=5                  # Amount in ETH to withdraw from Bybit to the hub wallet each cycle

# Wallet storage
HUB_WALLET_PASSWORD=change-me-please   # >= 12 characters, used to encrypt the wallet store
HUB_WALLET_STORE=./data/wallets.enc    # Path to the encrypted wallet registry

# Networks
RPC_BASE=https://mainnet.base.org
RPC_ABSTRACT=https://api.mainnet.abs.xyz
CHAIN_ID_BASE=8453
CHAIN_ID_ABSTRACT=2741
GAS_PRICE_GWEI=0.3

# Strategy & execution
BRIDGE_SLIPPAGE_BPS=80                 # 0.8%
SWAP_SLIPPAGE_BPS=100                  # 1.0%
TARGET_POOL_ADDRESS=0x...
POSITION_MANAGER_ADDRESS=0x...
FEE_TIER_BPS=500                       # Uniswap v3 fee tier (e.g. 500 = 0.05%)
RANGE_WIDTH_PERCENT=5                  # ±5% default range width
REBALANCE_PRICE_THRESHOLD_PERCENT=10   # Rebalance if price moves more than 10%
FEE_GAS_MULTIPLE_TRIGGER=3             # Recycle fees when >3× gas cost
PENGU_TOKEN_ADDRESS=0x...
WRAPPED_ETH_ADDRESS=0x...

# Optional logging override
LOG_LEVEL=info
